- if user_signed_in?
  - if proto.like_user(current_user.id)
    = button_to like_path(like, proto_id: proto.id), method: :delete, class: "btn btn-default", id: "like-button", remote: true do
      = image_tag("icon_red_heart.svg")
      %span.num#like-sum
        = proto.likes_count
  - else
    = button_to likes_path(proto_id: proto.id), class: "btn btn-default", id: "like-button", remote: true do
      = image_tag("icon_heart.svg")
      %span.num#like-sum
        = proto.likes_count
- else
  %button.btn.btn-default#like-button
    = image_tag("icon_heart.svg")
    %span.num#like-sum
      = proto.likes_count
