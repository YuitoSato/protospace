.continer
  #new_user
    .form-signin
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        = devise_error_messages!
        %h2.form-signin-heading
          Please sign in
        %label.sr-only{ for: "user_email"}
          Email
        #inputEmail
          = f.email_field :email, autofocus: "autofocus", placeholder: "Email address", class: "form-control", id: "inputEmail"
        %label.sr-only{ for: "password"}
          Password
        #inputPassword
          = f.password_field :password, autocomplete: "off", placeholder: "password", class: "form-control"
        .checkbox
          %label
            - if devise_mapping.rememberable?
              #checkbox
                = f.check_box :remember_me
                = f.label :remember_me
        .actions
          = f.submit "SIGN IN", class: "btn btn-lg btn-primary btn-block"

      .text-center
        %p
          Not a member?
        %a{ href: "/users/sign_up", target: "_self"}
          Sign up now
