%h2
  Register

= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!

  %div(class="field")
    = f.label :username
    = f.text_field :username, autofocus: true

  %div(class="field")
    = f.label :avatar
    = f.file_field :avatar, placeholder:"Add Image"

  %div(class="field")
    = f.label :email
    = f.email_field :email

  %div(class="field")
    = f.label :password
    - if @minimum_password_length
      %em
        (
        = @minimum_password_length
        )
        characters minimum
    = f.password_field :password, autocomplete: "off"

  %div(class="field")
    = f.label :password_confirmation
    = f.password_field :password_confirmation, autocomplete: "off"

  %div(class="field")
    = f.label :team
    = f.text_field :team

  %div(class="field")
    = f.label :profile
    = f.text_field :profile

  %div(class="field")
    = f.label :works
    = f.text_field :works

  %div(class="actions")
    = f.submit "SAVE"

= render "devise/shared/links"

