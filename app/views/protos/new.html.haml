%div.container.proto-new
  = form_for(@proto) do |f|
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          .proto-new-title
            = f.text_field :title, autofocus: true, placeholder: "Title"

        .row
          .col-md-12
            .cover-image-upload
              = f.fields_for :images do |a|
                = a.file_field :image
                = a.hidden_field :status, :value => :main

          .col-md-12
            %ul.proto-sub-list.list-group
              %li.list-group-item.col-md-4
                .image-upload
                  = f.fields_for :images do |b|
                    = b.file_field :image
                    = b.hidden_field :status, :value => :sub1

              %li.list-group-item.col-md-4
                .image-upload
                  = f.fields_for :images do |c|
                    = c.file_field :image
                    = c.hidden_field :status, :value => :sub2

              %li.list-group-item.col-md-4
                .image-upload-plus
                  %span +

      .row.proto-description
        .col-md-12
          = f.text_field :catch_copy, placeholder: "Catch copy"

        .col-md-12
          = f.text_field :concept, cols: "30", rows: "4", placeholder: "Concept"

      .row.text-center.proto-btn
        = f.submit value: 'Publish', class: "btn btn-lg btn-primary btn-block"





